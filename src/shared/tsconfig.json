{
  "compilerOptions": {
    "tsBuildInfoFile": "../../ts-build-infos/shared.tsbuildinfo",
    "allowJs": true,
    "declaration": true,
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "types": ["chrome", "vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // TODO: write to lit guys to fix this issue
    // "noUncheckedSideEffectImports": true, --> "messageText":"Unknown compiler option 'noUncheckedSideEffectImports'."
    "paths": {
      "#shared/*": ["../shared/*"],
      "#assets/*": ["../assets/*"]
    }
  }
}
